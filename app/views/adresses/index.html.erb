<p id="notice"><%= notice %></p>

<h1>Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Type of address</th>
      <th>Status</th>
      <th>Entity</th>
      <th>Number and street</th>
      <th>Suite or apartment</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.type_of_address %></td>
        <td><%= adress.status %></td>
        <td><%= adress.entity %></td>
        <td><%= adress.number_and_street %></td>
        <td><%= adress.suite_or_apartment %></td>
        <td><%= adress.city %></td>
        <td><%= adress.postal_code %></td>
        <td><%= adress.country %></td>
        <td><%= adress.notes %></td>
        <td><%= link_to 'Show', adress %></td>
        <td><%= link_to 'Edit', edit_adress_path(adress) %></td>
        <td><%= link_to 'Destroy', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

